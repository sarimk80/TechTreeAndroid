<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    //Google Sign in Button

    <style name="Google_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:text">Sign in</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawableLeft">@drawable/ic_google_logo</item>
        <item name="android:drawableStart">@drawable/ic_google_logo</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
    </style>

    <style name="SignOut">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:text">Sign Out</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>


    </style>

    <style name="Card" parent="CardView">
        xmlns:app="http://schemas.android.com/apk/res-auto"
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_190sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardUseCompatPadding">false</item>

    </style>

    <style name="Text_heading">
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="Text_content">
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/Details</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Image_logo">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="arrow_btn">

        <item name="android:background">@drawable/arrow</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:contentDescription">@string/app_name</item>

    </style>

    <style name="Text_heading_white">
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>


</resources>
